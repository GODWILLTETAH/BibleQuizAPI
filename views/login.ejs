<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Signup Form</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <section>
        <div class="container">
            <div class="user signinBox">
                <div class="imgBox">
                    <img src="img2/signinIMG.jpg" alt="">
                </div>
                <div class="formBox">
                    <form action="/login" method="post">
                        <h2>Login</h2>
                        <center><div class="errors"></div></center>
                        <input type="email" name="email" placeholder="Enter Email">
                        <input type="password" name="password" placeholder="Enter Password">
                        <input type="submit" value="Login">
                        <p class="signup">Don't have an Account? <a href="/register">Sign Up</a></p>
                    </form>
                </div>
            </div>
            <div class="user signupBox">
                <div class="formBox">
                    <form action="/register" method="post">
                        <h2>Create An Account</h2>
                        <input type="text" name="first_name" placeholder="First Name">
                        <input type="text" name="last_name" placeholder="Last Name">
                        <input type="email" name="email" placeholder="Enter Valid Email">
                        <input type="password" name="password" placeholder="Enter Password">
                        <input type="submit" value="Sign Up">
                        <p class="signup">Already have an Account? <a href="/login">Login</a></p>
                    </form>
                </div>
                <div class="imgBox">
                    <img src="img2/signupIMG.jpg" alt="">
                </div>
            </div>
        </div>
    </section>
    <script type="text/javascript">
        const form = document.querySelector('form');
        const errorMessage = document.querySelector('.errors');
  //const passwordError = document.querySelector('.password.error');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // reset errors
    errorMessage.textContent = '';

    // get values
    const email = form.email.value;
    const password = form.password.value;

    try {
      const res = await fetch ('/login', { 
        method: 'POST', 
        body: JSON.stringify({ email, password }),
        headers: {'Content-Type': 'application/json'}
      });
      const data = await res.json();
      //console.log(data);
      if (data.errors) {
        errorMessage.textContent = data.errors.email || data.errors.password ;
      } else {
        location.assign('/index')
      }
      // if (data.user) {
      //   location.assign('/index');
      // }

    }
    catch (err) {
      //console.log(err);
      errorMessage.textContent = data.err.message;
    }
  });
    </script>
</body>
</html>
